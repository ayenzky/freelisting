doctype html
html

  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    //- uncomment if your site is responsive!
    meta(name="viewport" content="width=device-width, initial-scale=1")

    meta(name='description', content= records.site.sitedata[0].metadesc)
    meta(name='author', content= records.site.sitedata[0].metauthor)
    meta(name="keywords" content= records.site.sitedata[0].metakeyword)

    title= records.site.sitedata[0].sitename

    link(rel="icon", href= records.site.sitedata[0].icon, type="image/*")
    link(rel="shortcut icon", href= records.site.sitedata[0].icon, type="img/*")
    link(href='https://fonts.googleapis.com/css?family=PT+Sans:400,700|Roboto:300,400,500', rel='stylesheet')

    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css')
    link(rel='stylesheet', href='/css/fixed-menu.css')
    <!-- Custom CSS -->
    != css()
    script(src='https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js')


  body#page


    include includes/_header
    include includes/_menu

    div.main-container
      block content

    footer
      include includes/_footer

    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')

    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/js/materialize.min.js')
    script(src='https://cdn.jsdelivr.net/algoliasearch/3/algoliasearch.min.js')
    script(src='https://cdn.jsdelivr.net/instantsearch.js/1/instantsearch.min.js')
    script(src='/js/app.js')
    script(src='/js/custom.js')
