@import '_settings'

normalize-css()
base()


body
  font 14px/1.6 'Roboto', sans-serif
  font-weight 400
  background-color #e2e1e0
  color #333

h1, h2 ,h3 ,h4, h5
  font-family 'Roboto', sans-serif

h1.title
  font-weight 500
  color #333

.container
  width 100%
  .row
    margin-left 0
    margin-right 0

nav
  background  #CB356B  /* fallback for old browsers */
  background  -webkit-linear-gradient(to right, #BD3F32, #CB356B)  /* Chrome 10-25, Safari 5.1-6 */
  background  linear-gradient(to right, #BD3F32, #CB356B) /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  .brand-logo
    font-family 'Roboto', sans-serif
    font-size 1.25em

.clearFx
  clear both
  position relative

.mt-16
  margin-top 16px
.mt-24
  margin-top 24px
.mt-32
  margin-top 32px
.mt-48
  margin-top 48px
.mt-52
  margin-top 52px

.mb-16
  margin-bottom 16px
.mb-24
  margin-bottom 24px
.mb-32
  margin-bottom 32px
.mb-48
  margin-bottom 48px
.mb-52
  margin-bottom 52px

h1
  font-size 3em

img
  max-width 100%

#cd-main-nav
  ul
    li
      display block
      width 100%
      line-height normal
      a
        color #222

.listing
  .list
    box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
    -webkit-box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
    transition 400ms ease
    -webkit-transition  400ms ease
    background-color #fff
    .list-thumbnail
      max-height 180px
      overflow hidden
      text-align center
      a
        display block
        height 100%
        background #485563  /* fallback for old browsers */
        background -webkit-linear-gradient(to left top, #29323c, #485563)  /* Chrome 10-25, Safari 5.1-6 */
        background linear-gradient(to left top, #29323c, #485563) /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        img
          -webkit-transition -webkit-transform 200ms ease-in-out
          transition -webkit-transform 200ms ease-in-out
          transition transform 200ms ease-in-out
          -webkit-transition -webkit-transform 200ms ease-in-out, -webkit-transform 200ms ease-in-out
          transition transform 200ms ease-in-out, -webkit-transform 200ms ease-in-out
    &.list:hover
      box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
      -webkit-box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
      img
        -webkit-transform: scale(1.07)
        transform: scale(1.07)
    .list-title
      padding 10px 10px 0px
      a
        color #555
        text-transform uppercase
        font-weight 800
    .blurb
      padding 0 10px
      .type
        display inline-block
        padding 2px 8px 2px 8px
        text-transform uppercase
        font-size 12px
        background #cb2d3e  /* fallback for old browsers */
        background -webkit-linear-gradient(to right, #ef473a, #cb2d3e)  /* Chrome 10-25, Safari 5.1-6 */
        background linear-gradient(to right, #ef473a, #cb2d3e) /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        color #fff
        .material-icons
          float left
          margin-top 2px

.single-page
  a
    color #bd3f32
  .list-info
    .material-icons
      float left
      margin-top 2px
      margin-right 4px
      color #607D8B

.ais-hits--item
  padding  0 .75rem
  margin-bottom  16px
  width 250px
  .hit
    box-shadow  4px 5px 5px #f4f4f4
    -webkit-box-shadow  4px 5px 5px #f4f4f4
    transition  400ms ease
    -webkit-transition  400ms ease


.modal
  .modal-content
    position relative
    padding 0px
    .loader
      width 36px
      position absolute
      left 0
      right 0px
      top 40%
      margin:auto;
    .row
      margin-bottom 0px
      .l6
        padding-top 16px
        padding-bottom 16px
        position relative
        &:first-child
          padding 0px

.img-small
  filter: blur(50px);
  /* this is needed so Safari keeps sharp edges */
  transform: scale(1);


@media (max-width: 414px)
  .row .col.xs12
    width 100%