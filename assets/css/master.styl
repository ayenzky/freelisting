@import '_settings'

normalize-css()
base()


body
  font 16px/1.6 'Montserrat', sans-serif
  font-weight 400
  background-color #eceff1
  color #333

h1, h2 ,h3 ,h4, h5
  font-family 'Montserrat', sans-serif

h1.title
  font-weight 300
  color #333
  text-transform uppercase

h1.page-title
  font-weight 700
  color rgba(0,0,0,.87)

.container
  width 100%
  .row
    margin-left 0
    margin-right 0

nav
  background  #CB356B  /* fallback for old browsers */
  background  -webkit-linear-gradient(to right, #BD3F32, #CB356B)  /* Chrome 10-25, Safari 5.1-6 */
  background  linear-gradient(to right, #BD3F32, #CB356B) /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  .brand-logo
    font-family 'Roboto', sans-serif
    font-size 1.25em

.clearFx
  clear both
  position relative

.mt-16
  margin-top 16px
.mt-24
  margin-top 24px
.mt-32
  margin-top 32px
.mt-48
  margin-top 48px
.mt-56
  margin-top 56px

.mb-16
  margin-bottom 16px
.mb-24
  margin-bottom 24px
.mb-32
  margin-bottom 32px
.mb-48
  margin-bottom 48px
.mb-52
  margin-bottom 52px

.brand-logo
  padding 0 16px !important

h1
  font-size 3em

img
  max-width 100%

input#search-input:focus
  border-bottom  1px solid #c03d3f
  box-shadow  0 1px 0 0 #cb356a

#cd-main-nav
  ul
    li
      display block
      width 100%
      line-height normal
      a
        color #222

.ais-pagination
  display flex
  align-items center
  justify-content center
  align-items center
  .ais-pagination--item
    .material-icons
      border 1px solid #F44336
      display block
    &.active
      a
        color #F44336

    a
      color #333


.listing
  .featured-list
    .list
      height 420px
  .list
    box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
    -webkit-box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
    transition 400ms ease
    -webkit-transition  400ms ease
    background-color #fff
    .list-thumbnail
      min-height 180px
      overflow hidden
      text-align center
      position relative
      a
        display  block
        margin 15% auto
        img
          -webkit-transition -webkit-transform 200ms ease-in-out
          transition -webkit-transform 200ms ease-in-out
          transition transform 200ms ease-in-out
          -webkit-transition -webkit-transform 200ms ease-in-out, -webkit-transform 200ms ease-in-out
          transition transform 200ms ease-in-out, -webkit-transform 200ms ease-in-out
    &.list:hover
      box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
      -webkit-box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
      // img
      //   -webkit-transform: scale(1.07)
      //   transform: scale(1.07)
      .list-title
        a
          color #F44336
    .list-title
      padding 16px
      a
        color #333
        font-size  18px
        font-weight  700
        line-height  26px
        text-decoration  none
      .short-desc
        p
          color rgba(0,0,0,.75)
          font-family 'Hind', sans-serif
          font-size 16px

    .blurb
      padding 0 10px
      position absolute
      bottom  0
      left 0
      margin-left -10px
      .type
        display inline-block
        padding 2px 8px 2px 8px
        text-transform uppercase
        font-size 12px
        background #cb2d3e  /* fallback for old browsers */
        background -webkit-linear-gradient(to right, #ef473a, #cb2d3e)  /* Chrome 10-25, Safari 5.1-6 */
        background linear-gradient(to right, #ef473a, #cb2d3e) /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        color #fff
        .material-icons
          float left
          margin-top 2px
  .lists
    .list
      height 355px
    .blurb
      .type
        background: #00c6ff;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #0072ff, #00c6ff);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to left, #2196F3, #03A9F4); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

#hits.listing
  .list
    height 340px
    .type
      &.featured
        background #cb2d3e  /* fallback for old browsers */
        background -webkit-linear-gradient(to right, #ef473a, #cb2d3e)  /* Chrome 10-25, Safari 5.1-6 */
        background linear-gradient(to right, #ef473a, #cb2d3e) /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      &.free
        background: #00c6ff;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #0072ff, #00c6ff);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to left, #2196F3, #03A9F4); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

.single-page
  #list-info
    .material-icons
      float  left
      margin-top  5px
      margin-right  4px
      margin-bottom 8px
      color  #607d8b

.welcome_msg
  float right
  margin-top 24px
  a
    display block
    color #222
    font-size 13px
    .webriqlogo
      float right
      width 150px
      margin-top -15px

.home-header nav
  padding-left 0px

.main .listing .featured-list .list
  height 420px

.main-container, nav
  padding-left 300px
  @media only screen and (max-width: 992px)
    padding-left 0px

#mobile-nav
  .sidebar
    padding 0 24px 24px 24px
    background-color white
    h5
      font-weight 400
      text-transform uppercase
      color rgba(0,0,0,.87)
    .ais-menu--item
      line-height 1.6
    a
      color rgba(0,0,0,.87)
      text-transform capitalize
      font-size 16px
      font-weight 400
      font-family Montserrat
      .count
        color #bd3f32

.list-info, #list-info
  .material-icons
    float left
    margin-top 2px
    margin-right 4px
    color #607D8B

.ais-hits--item
  padding  0 .75rem
  margin-bottom  16px
  width 250px
  .hit
    box-shadow  4px 5px 5px #f4f4f4
    -webkit-box-shadow  4px 5px 5px #f4f4f4
    transition  400ms ease
    -webkit-transition  400ms ease


.modal
  .modal-content
    position relative
    padding 0px
    .loader
      width 36px
      position absolute
      left 0
      right 0px
      top 40%
      margin:auto;
    .row
      margin-bottom 0px
      .l6
        padding-top 16px
        padding-bottom 16px
        position relative
        &:first-child
          padding 0px

.img-small
  filter: blur(50px);
  /* this is needed so Safari keeps sharp edges */
  transform: scale(1);

.search-page .listing .list .list-thumbnail{
  max-height:130px;
}
.search-page .listing .featured-list .list{
  height:285px;
}


@media (max-width: 414px)
  .row .col.xs12
    width 100%

